{% extends '/base.html.twig' %}

{% block body %}
    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
        <h1 class="display-4 fw-normal">All goods</h1>
        <p class="fs-5 text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus aliquam aperiam at consectetur ducimus error, id incidunt ipsum labore laborum, mollitia necessitatibus nisi nostrum qui quos saepe tempora ullam veritatis.</p>
    </div>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
                {% for product in products %}
                <div class="col mb-4">
                    <div class="card shadow-sm h-100">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em" class="text-align-center">Imagine picture</text></svg>
                        <div class="card-body">
                            <div class="row mb-4">
                                <h4 class="card-title"> {{product.title}}</h4>
                                <p class="card-text">{{ product.description|length > 110 ? product.description|striptags|slice(0, 110) ~ '...' : product.description|striptags}}</p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <a type="button" class="btn btn-lg btn-outline-secondary" href="{{ path('shop_item', {'id':product.id}) }}">View</a>
                                <p class="text-uppercase">{{product.price}} UAH</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}

